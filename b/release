#!/bin/sh
this=$(readlink -f ${0})
here=$(readlink -f $(dirname ${this}))

die() { echo $@; exit 1; }

cd ${here}/..
rdir="../popcornrelease"
[ -d ${rdir} ] || die "${rdir} not found"

version=$(git tag | sort -V | tail -1)
echo "creating release version ${version}"
git archive --output=${rdir}/popcorn-${version}.tar.gz --prefix=popcorn/ ${version}
ls -lt ${rdir} | head -2

