#!/bin/sh
die() { echo $@ ; exit 1; }
[ -d ~/.popcorn ] &&
  die "~/.popcorn already exists. Remove it first."
echo "Initializing popcorn configuration for user $USER..."
mkdir ~/.popcorn
<< 'EOF' cat > ~/.popcorn/options.json && echo Created options.json
{
  "httpPort": "8000",
  "machineDirs": {
    "demo": "%U/.popcorn/demo"
  },
  "appPort": "8001"
}
EOF
mkdir ~/.popcorn/demo
<< 'EOF2' cat > ~/.popcorn/demo/frags.html && echo Created demo dir
<p data-alt=".hinge/open">Hinge open
<input type="button" value="Close" data-onclick="C .hinge closed"></input>
</p>
<p data-alt=".hinge/closed">Hinge closed
<input type="button" value="Open" data-onclick="C .hinge open"></input>
</p>
<p data-alt=".bolt/unlocked">Bolt unlocked</p>
<p data-alt=".bolt/locked">Bolt locked</p>
EOF2




